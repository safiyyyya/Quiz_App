<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    tools:ignore="HardcodedText"
    android:background="@color/neavy_blue">

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="130sp"
        android:layout_height="130sp"
        android:src="@drawable/logo"
        android:layout_marginTop="30sp"
        android:layout_centerHorizontal="true"
        android:contentDescription="logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/img_logo"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_lakshya"
            android:layout_marginTop="30sp"
            android:layout_width="wrap_content"
            android:layout_height="100sp"
            android:src="@drawable/lakshya"
            android:layout_marginHorizontal="90sp"
            android:contentDescription="tagline" />

        <EditText
            android:id="@+id/txt_username"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="60sp"
            android:layout_marginTop="30sp"
            android:autofillHints="Username"
            android:background="@drawable/txt_shape"
            android:drawableStart="@drawable/ic_person"
            android:hint="Enter Username"
            android:inputType="text"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:paddingStart="10sp"
            android:paddingEnd="10sp"
            android:shadowColor="#D5FFFFFF"
            android:textColorHint="#757575" />

        <EditText
            android:id="@+id/txt_password"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="60sp"
            android:layout_marginTop="45sp"
            android:autofillHints=""
            android:textAlignment="center"
            android:background="@drawable/txt_shape"
            android:drawableStart="@drawable/ic_lock"
            android:hint="Enter Password"
            android:textColor="@color/black"
            android:inputType="textPassword"
            android:paddingStart="10sp"
            android:paddingEnd="10sp"
            android:textColorHint="#757575" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="130sp"
            android:layout_marginTop="50sp"
            android:background="@drawable/btn_shape"
            android:fontFamily="sans-serif-condensed-medium"
            android:minHeight="48dp"
            android:text="LOGIN"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>

</RelativeLayout>